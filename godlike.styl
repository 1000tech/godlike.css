@charset "UTF-8"

*, :before, :after
    box-sizing border-box

html, body
    height 100%
    margin 0
    padding 0

body
    min-height 100%
    overflow auto
    overflow-x hidden
    word-wrap break-word
    text-rendering optimizeSpeed
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

article, aside, details, figcaption, figure, footer, header, main, menu, nav, section, summary
    display block

a, img, input, button, textarea, optgroup, select
    font inherit
    color inherit
    line-height inherit
    text-transform inherit
    text-shadow inherit
    outline none
    border none
    background none
    box-shadow none
    margin 0
    padding 0

a
    cursor pointer
    text-decoration none
    &:active, &:hover, &:focus
        outline 0

b, strong
    font-weight 700

img
    border 0
    vertical-align middle

// Cursor pointer on button
button, label, select
    -ms-user-select none
    -moz-user-select none
    -webkit-user-select none
    user-select none
    cursor pointer

button, input
    &[disabled]
        pointer-events none
    // Remove padding in FF
    &::-moz-focus-inner
        border 0
        padding 0

// Add default animation
button, a
    transition color .25s, background .25s, opacity .25s

// Remove styling in WebKit
input
    -webkit-appearance: none;
    &::-webkit-search-cancel-button, &::-webkit-search-decoration
        -webkit-appearance: none;
    // Cursor pointer on button
    &[type="button"], &[type="reset"], &[type='submit'], &[type='checkbox'], &[type='radio']
        -ms-user-select none
        -moz-user-select none
        -webkit-user-select none
        user-select none
        cursor pointer

textarea
    overflow auto
    resize none

h1, h2, h3, h4, h5, h6
    text-rendering optimizeLegibility
    font-family inherit
    font-weight 500
    line-height 1.1
    color inherit
    margin 0

ul, ol
    margin 0 0 10px
    padding 0
    -moz-padding 0
    -webkit-padding 0
    ul, ol
        margin 0

ul
    list-style none

// Valid stylization in text
p, form
    -ms-hyphens auto
    -moz-hyphens auto
    -webkit-hyphens auto
    hyphens auto
    ul
        list-style disc
    a
        text-decoration underline

table
    border-spacing 0
    border-collapse collapse

td, th
    padding 0
    text-align center

// Fix placeholder color in FF
:-moz-placeholder, ::-moz-placeholder
    opacity 1

// Fix viewport in IE 10 Mobile
@-ms-viewport
    width device-width